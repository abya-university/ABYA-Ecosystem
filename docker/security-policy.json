{
  "description": "ABYA Ecosystem Container Security Policy",
  "version": "1.0",
  "security_settings": {
    "container_runtime": {
      "run_as_non_root": true,
      "read_only_root_filesystem": true,
      "no_new_privileges": true,
      "drop_capabilities": [
        "ALL"
      ],
      "add_capabilities": [],
      "seccomp_profile": "runtime/default",
      "apparmor_profile": "docker-default"
    },
    "network_security": {
      "network_mode": "bridge",
      "publish_all_ports": false,
      "dns_options": [],
      "extra_hosts": []
    },
    "resource_limits": {
      "memory": "256m",
      "memory_swap": "256m",
      "cpu_quota": 100000,
      "cpu_period": 100000,
      "pids_limit": 1024
    },
    "volume_security": {
      "read_only_volumes": [
        "/etc/nginx/nginx.conf",
        "/etc/nginx/conf.d",
        "/etc/ssl/certs"
      ],
      "tmpfs_mounts": [
        "/tmp",
        "/var/tmp",
        "/var/cache/nginx"
      ],
      "no_mount_points": [
        "/proc",
        "/sys",
        "/dev"
      ]
    }
  },
